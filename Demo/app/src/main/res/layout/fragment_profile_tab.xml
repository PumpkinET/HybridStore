<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/updateProfileAvatar"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="28dp"
                android:adjustViewBounds="false"
                android:scaleType="centerCrop" />

            <EditText
                android:id="@+id/updateProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/updateProfileAvatar"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:text="Email"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/updateProfilePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/updateProfileEmail"
                android:layout_alignStart="@+id/updateProfileEmail"
                android:layout_below="@+id/updateProfileEmail"
                android:layout_marginRight="30dp"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:inputType="textPassword"
                android:text="Name"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/updateProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/updateProfilePassword"
                android:layout_alignRight="@+id/updateProfilePassword"
                android:layout_below="@+id/updateProfilePassword"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="Name"
                android:textAlignment="center" />

            <Button
                android:id="@+id/updateProfileButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/updateProfileName"
                android:layout_alignRight="@+id/updateProfileName"
                android:layout_below="@+id/updateProfileName"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="28dp"
                android:background="@color/colorAccent"
                android:text="Update"
                android:textColor="#FFF" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>