<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <ImageView
        android:id="@+id/confirmLogo"
        android:layout_width="164dp"
        android:layout_height="111dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        app:srcCompat="@mipmap/ic_confirmorder" />

    <TextView
        android:id="@+id/orderConfirmed"
        android:layout_width="302dp"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="196dp"
        android:gravity="center"
        android:text="Thank you for your order!\nYour order has been received!"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/orderContact"
        android:layout_width="252dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="145dp"
        android:gravity="center"
        android:text="We will contact you via the phone number you have entered shortly."
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/orderConfirmed"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:background="@color/colorAccent"
        android:text="Confirm"
        android:textColor="@android:color/white" />
</RelativeLayout>
